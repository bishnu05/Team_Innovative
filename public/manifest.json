{
  "manifest_version": 2,

  "name": "Study Stopwatch",
  "description": "Study, work or do any task using Stopwatch extension",
  "version": "1.0",
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "logo192.png",
    "48": "logo192.png",
    "128": "logo192.png"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": []
}